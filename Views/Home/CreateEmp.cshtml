@model Course2.Models.DTOs.UpLoadEmployee

@{
    ViewData["Title"] = "Regisztráció";
}

<div class="text-center" style="background: linear-gradient(to top, #009999 0%, #00ffff 100%)">
    <h1 class="display-4">Regisztráció</h1>
    <p>Regisztrálj, hogy a szakmai videók megtekintésért</p>
</div>

</br>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEmp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.EmployeeName" class="control-label"></label>
                <input asp-for="Employee.EmployeeName" class="form-control" style= "opacity: 0.8" />
                <span asp-validation-for="Employee.EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmployeeEmail" class="control-label"></label>
                <input asp-for="Employee.EmployeeEmail" class="form-control" style= "opacity: 0.8" />
                <span asp-validation-for="Employee.EmployeeEmail" class="text-danger"></span>
            </div>

            <div class="form-group" style= "opacity: 0.8">
                @Html.LabelFor(m => m.Positions, htmlAttributes: new { @class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.PositionSelectedId,  new SelectList(@Model.Positions, "Id", "PositionName"), "Válassz...", new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Positions, "Válassz ki pozíciót",  new { @class = "text-danger"})

                </div>


                @*
                <div class="form-group">
                <label asp-for="PositionId" class="control-label"></label>
                <input asp-for="PositionId" class="form-control"/>
                <span asp-validation-for="PositionId" class="text-danger"></span>
                </div>

                *@

                </br>
                <div class="form-group">
                    <input type="submit" value="Regisztáció" class="btn" style="background: linear-gradient(to bottom, #009999 0%, #33cccc 100%)"/>
                </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }