
@{
    ViewData["Title"] = "Szakmai videó";
}

<div class="text-center">
    <h1 class="display-4">Oktató videók</h1>
    <p>Professzionális szakmai videók</p>
</div>

<div class="container">
    
    <form action="post" method="post" class="form-signin">
        <h2 class="form-signin-heading">Jelentkezz be!</h2>
        <label for="username" class="sr-only">Teljes név</label>
        <input id="username" name="username" class="form-control" placeholder="Név" autofocus="">
        <label for="email" class="sr-only">E-mail</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="E-mail">
        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Belépés</button>
    </form>
</div>

<hr/>

<div class="VideoList">
    <table class="table">
        <tr>
            <th>
                Video
            </th>
            <th style="min-width: 110px">
                Play
            </th>
            
        </tr>

 
        

        @foreach (var video in ViewBag.videos)
        {


            <tr>
                <td>
                    @video.VideoName
                </td>

                <td>
                   <a href="@video.videoURL" target="_blank">Megtekintés</a> 
                </td>


                <td>
                    <div class="videoIcon">
           
                       <a href="@video.videoURL"><img src="~/../Pictures/play.png" alt="Play" target="_blank"></a>
                        
                    </div>
         
                </td>

            </tr>
        }


    </table>
</div>